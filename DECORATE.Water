actor WaterSplashBase2
{
  Radius 1
  Height 1
  +DONTTHRUST
  alpha .6
  Scale 1.1
  +DONTSPLASH
  +BLOODSPLATTER
  +THRUACTORS
  +SHOOTABLE
  +NOBLOOD
  +BLOODLESSIMPACT 
  +NODAMAGETHRUST
  Health 100
  DamageFactor "CauseWaterSplash", 99.0
  Damagetype "CauseObjectsToSplash"
  States
  {
  Spawn:
	TNT1 FFFFFF 0 A_CustomMissile ("WaterParticleX", 2, random(-5,5), random (0, 360), 2, random (50, 140))
