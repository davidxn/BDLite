Actor LiquidParticleX
{
  Height 1
  Radius 1
  Mass 0
  +Missile
  -BLOODSPLATTER
  +DontSplash
  +DoomBounce
  +FORCEXYBILLBOARD
  +THRUACTORS
  +CLIENTSIDEONLY
  BounceFactor 0.1
  Gravity 0.5
  RenderStyle Add
  Scale 4.0
  Alpha 0.4
  //Speed 2
  decal watersplash
  Speed 7
  States
  {
  Spawn:
  TNT1 A 1 
  TNT1 A 0 A_ChangeFlag(DOOMBOUNCE, 0)
  TNT1 A 1
  Goto Stand
  Stand:
    LIQU ABCDDDDDDDDDDDDDDDDDDD 4
    Stop
 Death:
 TNT1 A 1
 TNT1 FFF 0 A_CustomMissile ("WaterParticleX", 2, random(-5,5), random (0, 360), 2, random (50, 140))
 TNT1 A 0
 Stop
	
  }
}



Actor WaterParticleXSpawner
{
	Projectile
	+RANDOMIZE
+FORCEXYBILLBOARD
   // +BLOODSPLATTER 
